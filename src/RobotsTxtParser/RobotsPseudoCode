RobotsTxt Constructor
{
Create Root - "/", true, false

findUserAgentRules ("*")

while(readRule)
   call Allow/Disallow: path
}

Allow/Disallow
{
call FindOrCreateNode: path
   // This will search from root, creating nodes as necessary
   // Until it finds our node for this rule, returning that DR
   // As a reference
pathNode.SetAllowed(Allow ? true : false)
   // Recursive call, checks if hasRule, ignores if so.
   // If not, sets allowed to parameter than recursively calls
   // Itself on each of childrenRules
pathNode.FoundRule();
   // Changes hasRule so changes up tree cannot affect it
}

FindOrCreateNode
{
DirectoryRules curDir = root;
while(getNewPathPart)
   curDir = curDir.FindOrCreateChild(newPathPart);

return curDir;
}
