{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build engine",
            "type": "shell",
            "command": "make CC=g++-8 -j8",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean wd",
            "type": "shell",
            "command": "rm -rf wd && mkdir wd",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "build all",
            "dependsOn": [
                "clean wd",
                "build engine"
            ]
        }
    ]
}